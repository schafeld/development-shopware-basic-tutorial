{% sw_extends '@Storefront/storefront/component/product/listing.html.twig' %}

{# This overrides the search results list, e.g. http://localhost:8000/search?search=steel #}

{% block element_product_listing_row %}

<h1>Custom Product Listing</h1>

{# {{ dump(searchResult) }} #}

    <div class="row">
        {% for product in searchResult %}
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card training-card">
                    <div class="img-container">
                        {# {{ dump(product.cover.media) }} #}
                        <img src="{{ product.cover.media.url }}" class="card-img-top" alt="{{ product.name }}">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text">{{ product.description }}</p>
                        <p class="card-text">{{ product.description }}</p>
                        <a href="#" class="btn btn-primary">View Product</a>
                        
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>        



{% endblock %}