{% sw_extends '@Storefront/storefront/component/product/listing.html.twig' %}

{# This overrides the search results list, e.g. http://localhost:8000/search?search=steel #}

{% block element_product_listing_row %}

<h1>Custom Product Listing</h1>

{# {{ dump(searchResult) }} #}

    <div class="row">
        {% for product in searchResult %}
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card training-card">
                    <div class="img-container">
                        {# {{ dump(product.cover.media) }} #}
                        
                        {% sw_thumbnails 'thumbs' with {
                            'media': product.cover.media,
                            'sizes': {
                                'default': '400px'
                            }
                        } %}
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{ product.translated.name }}</h5>
                        <p class="card-text">{{ product.translated.description }}</p>
                        <p class="card-text">
                            {# {% for price in product.calculatedPrices %}
                                <span class="price-amount">{{ price.unitPrice|currency }}</span>
                            {% endfor %} #}

                            {# vendor/shopware/platform/src/Storefront/Resources/views/storefront/component/product/card/price-unit.html.twig #}
                            {% sw_include '@Storefront/storefront/component/product/card/price-unit.html.twig' with {
                                product: product
                            } %}
                        <a href="{{ path('frontend.detail.page', { productId: product.id }) }}" class="btn btn-primary">View Product</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>        



{% endblock %}